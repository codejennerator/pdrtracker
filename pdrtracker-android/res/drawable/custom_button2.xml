<?xml version="1.0" encoding="utf-8"?>


<selector
    xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@drawable/blue1"
                android:endColor="@drawable/blue2"
                android:angle="270"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient
                android:endColor="@drawable/yellow1"
                android:startColor="@drawable/yellow2"
                android:angle="270"/>
            <stroke
                android:width="3dp"
                android:color="@drawable/gray2"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@drawable/yellow1"
                android:startColor="@drawable/yellow2"
                android:angle="270"/>
        </shape>
    </item>


</selector>