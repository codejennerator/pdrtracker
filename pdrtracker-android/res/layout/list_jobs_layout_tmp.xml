<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/panel_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/panel_background">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/job_list_item"
            android:columnCount="6"
            android:clickable="true"
            >

            <!--
            <Space
                android:background="@drawable/label_background"
                android:layout_width="20dip"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"/>
             -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donald's Car"
                android:layout_column="0"
                android:layout_row="0"
                android:paddingRight="10dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2013"
                android:layout_column="1"
                android:layout_row="0"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Donald Thomas"
                android:paddingRight="10dp"
                android:background="@drawable/gray1"
                android:layout_gravity="fill_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:text="(999) 999 - 9999"
                android:paddingRight="10dp"
                android:background="@drawable/gray1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:text="1995"
                android:paddingRight="10dp"
                android:background="@drawable/gray1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="1"
                android:text="Honda"
                android:paddingRight="10dp"
                android:background="@drawable/gray1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_row="1"
                android:text="Prelude"
                android:paddingRight="10dp"
                android:background="@drawable/gray1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:layout_row="1"
                android:text="Yellow"
                android:paddingRight="10dp"
                android:background="@drawable/gray1"/>
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/job_list_item"
            android:columnCount="6"
            android:clickable="true"
            >

            <!--
            <Space
                android:background="@drawable/label_background"
                android:layout_width="20dip"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"/>
             -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bob's Car"
                android:layout_column="0"
                android:layout_row="0"
                android:paddingRight="10dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2013"
                android:layout_column="1"
                android:layout_row="0"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Bob Gaddy"
                android:paddingRight="10dp"
                android:background="@drawable/gray1"
                android:layout_gravity="fill_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:text="(999) 999 - 9999"
                android:paddingRight="10dp"
                android:background="@drawable/gray1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:text="1989"
                android:paddingRight="10dp"
                android:background="@drawable/gray1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="1"
                android:text="Honda"
                android:paddingRight="10dp"
                android:background="@drawable/gray1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_row="1"
                android:text="Civic"
                android:paddingRight="10dp"
                android:background="@drawable/gray1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:layout_row="1"
                android:text="Gold"
                android:paddingRight="10dp"
                android:background="@drawable/gray1"/>
        </GridLayout>



    </LinearLayout>

</ScrollView>
